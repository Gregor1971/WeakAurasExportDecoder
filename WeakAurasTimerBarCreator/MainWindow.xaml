<Window x:Class="WeakAurasTimerBarCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeakAurasTimerBarCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="CompressedText" TextWrapping="Wrap" AcceptsReturn="True"/>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button Content="Compress"/>
            <Button Content="DeCompress"/>
            <TextBox x:Name="debugTextBox" Height="23" TextWrapping="Wrap"/>
        </StackPanel>
        <TextBox Grid.Column="2" x:Name="DeCompressedText" TextWrapping="Wrap" AcceptsReturn="True"/>
    </Grid>
</Window>
